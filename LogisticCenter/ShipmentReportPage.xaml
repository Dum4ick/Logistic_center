<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogisticCenter.ShipmentReportPage"
             BackgroundColor="#121212">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- HEADER -->
            <Grid ColumnDefinitions="*,Auto">
                <Label Text="Отчёт по отгрузкам"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="White"/>

                <Button Grid.Column="1"
                        Text="↩ Назад"
                        Command="{Binding GoBackCommand}"
                        BackgroundColor="#1C1C26"
                        BorderColor="#00cccc"
                        BorderWidth="2"
                        TextColor="White"
                        CornerRadius="10"/>
            </Grid>

            <!-- EXCEL TABLE -->
            <VerticalStackLayout Spacing="0">

                <!-- HEADER ROW -->
                <Grid ColumnDefinitions="70,70,*,140,70">

                    <Border Stroke="#00cccc" StrokeThickness="1">
                        <Label Text="ID" TextColor="#00cccc" Padding="10"/>
                    </Border>

                    <Border Grid.Column="1" Stroke="#00cccc" StrokeThickness="1">
                        <Label Text="Заказ" TextColor="#00cccc" Padding="10"/>
                    </Border>

                    <Border Grid.Column="2" Stroke="#00cccc" StrokeThickness="1">
                        <Label Text="Статус" TextColor="#00cccc" Padding="10"/>
                    </Border>

                    <Border Grid.Column="3" Stroke="#00cccc" StrokeThickness="1">
                        <Label Text="Дата" TextColor="#00cccc" Padding="10"/>
                    </Border>

                    <Border Grid.Column="4" Stroke="#00cccc" StrokeThickness="1">
                        <Label Text="Кол-во" TextColor="#00cccc" Padding="10"
                               HorizontalTextAlignment="Center"/>
                    </Border>

                </Grid>

                <!-- DATA ROWS -->
                <CollectionView ItemsSource="{Binding Items}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>

                            <Grid ColumnDefinitions="70,70,*,140,70">

                                <Border Stroke="#00cccc" StrokeThickness="1">
                                    <Label Text="{Binding Shipment_Id}"
                                           TextColor="White"
                                           Padding="10"/>
                                </Border>

                                <Border Grid.Column="1" Stroke="#00cccc" StrokeThickness="1">
                                    <Label Text="{Binding Order_Id}"
                                           TextColor="#C7C7D1"
                                           Padding="10"/>
                                </Border>

                                <Border Grid.Column="2" Stroke="#00cccc" StrokeThickness="1">
                                    <Label Text="{Binding Status}"
                                           TextColor="#00cccc"
                                           Padding="10"/>
                                </Border>

                                <Border Grid.Column="3" Stroke="#00cccc" StrokeThickness="1">
                                    <Label Text="{Binding Created_At}"
                                           TextColor="#C7C7D1"
                                           Padding="10"/>
                                </Border>

                                <Border Grid.Column="4" Stroke="#00cccc" StrokeThickness="1">
                                    <Label Text="{Binding Items_Count}"
                                           TextColor="#22cc88"
                                           Padding="10"
                                           HorizontalTextAlignment="Center"/>
                                </Border>

                            </Grid>

                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

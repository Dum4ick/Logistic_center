<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:behaviors="clr-namespace:LogisticCenter.Behaviors"
    x:Class="LogisticCenter.AddEditProductPopup"
    Color="Transparent">

    <Frame BackgroundColor="#14141A" CornerRadius="10" Padding="0">
        <VerticalStackLayout Padding="20" Spacing="16" VerticalOptions="Center">

            <Label Text="{Binding Title}"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>

            <Border Stroke="#00cccc"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 10"
                HorizontalOptions="Fill">

                <Entry Placeholder="Имя товара"
                   Text="{Binding Name}"
                   TextColor="White"
                   PlaceholderColor="#777"/>
            </Border>

            <Picker ItemsSource="{Binding Categories}"
                ItemDisplayBinding="{Binding Name}"
                SelectedItem="{Binding SelectedCategory}"/>


            <Border Stroke="#00cccc"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 10"
                HorizontalOptions="Fill">
                <Entry Placeholder="Вес"
                   Text="{Binding Weight}"
                   TextColor="White"
                   PlaceholderColor="#777">
                    <Entry.Behaviors>
                        <behaviors:DoubleEntryBehavior/>
                    </Entry.Behaviors>
                </Entry>

            </Border>

            <Border Stroke="#00cccc"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 10"
                HorizontalOptions="Fill">
                <Entry Placeholder="Цена"
                   Text="{Binding Price}"
                   TextColor="White"
                   PlaceholderColor="#777">
                    <Entry.Behaviors> 
                        <behaviors:DoubleEntryBehavior/>
                    </Entry.Behaviors>
                </Entry>

            </Border>


            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">

                <Button Text="Отмена"
                        Command="{Binding CloseCommand}"
                        BackgroundColor="Red"
                        TextColor="White"
                        CornerRadius="10"/>

                <Button Text="{Binding SaveText}"
                        Command="{Binding SaveCommand}"
                        BackgroundColor="#00cccc"
                        TextColor="White"
                        CornerRadius="10"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>
